<h2>Welcome to the WRFC squash leagues</h2>
<h4>Recent News & Events</h4>

<% @blogs.each do |blog| %>
    <blockquote>
      <small><%= blog.created_at.strftime("%d %b '%y") %></small>
      <p><p><%= link_to blog.title, blog, :class => 'blog_title' %> <% unless blog.author.nil? %>- <span class="blog_author"><%= player_by_id(blog.author).name %></span><% end %></p>
    </blockquote>
	<span class="blog_style"><%= raw blog.summary %></span><br><br>
<% end %>
<%= paginate @blogs %>
<br />